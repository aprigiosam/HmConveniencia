# .gitignore
printf "# Python/Django
__pycache__/
*.py[cod]
.env*
venv/
.venv/

# Node/React
node_modules/
dist/
build/
*.log

# Docker/OS/VSCode
.vscode/
.DS_Store
Thumbs.db
" > .gitignore

# .gitattributes (padroniza LF, evita CRLF em Linux/WSL)
printf "* text=auto eol=lf
*.bat text eol=crlf
*.cmd text eol=crlf
*.ps1 text eol=crlf
" > .gitattributes
